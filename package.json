{
    "name": "transcript-processor",
    "version": "1.0.0",
    "description": "YouTube Transcript Processor with Local LLM",
    "main": "dist-electron/main.js",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build && tsc -p electron/tsconfig.json && electron-builder",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview",
        "electron:dev": "concurrently -k \"cross-env BROWSER=none vite\" \"wait-on http://localhost:5173 && tsc -p electron/tsconfig.json && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
        "electron:build": "vite build && tsc -p electron/tsconfig.json && electron-builder"
    },
    "dependencies": {
        "@distube/ytdl-core": "^4.16.12",
        "clsx": "^2.1.0",
        "lucide-react": "^0.344.0",
        "openai": "^4.28.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwind-merge": "^2.2.1",
        "youtube-captions-scraper": "^2.0.3",
        "youtube-transcript": "^1.2.1",
        "zustand": "^4.5.1"
    },
    "devDependencies": {
        "@types/node": "^20.11.24",
        "@types/react": "^18.2.61",
        "@types/react-dom": "^18.2.19",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.18",
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "electron": "^29.1.0",
        "electron-builder": "^24.13.3",
        "postcss": "^8.4.35",
        "tailwindcss": "^3.4.1",
        "tailwindcss-animate": "^1.0.7",
        "typescript": "^5.3.3",
        "vite": "^5.1.4",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.transcript.processor",
        "productName": "YT Transcript Processor",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "dist-electron/**/*"
        ],
        "extraResources": [
            {
                "from": "scripts",
                "to": "scripts",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "win": {
            "target": "nsis",
            "icon": "ui/icon.ico"
        }
    }
}